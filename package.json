{
  "name": "frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npm run build && next start",
    "test": "set CI=true && npm run test:lint && npm run test:code --no-watch",
    "test:lint": "eslint src/**/*.js && stylelint src/**/*.css",
    "test:code": "react-scripts test",
    "e2e:run": "cypress run",
    "e2e:open": "cypress open"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "postcss": {
    "plugins": {
      "postcss-flexbugs-fixes": {},
      "postcss-preset-env": {
        "autoprefixer": {},
        "stage": 3,
        "features": {
          "custom-properties": false,
          "custom-media-queries": true,
          "nesting-rules": true,
          "custom-selectors": true
        }
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^api(.*)$": "<rootDir>/src/api$1",
      "^components(.*)$": "<rootDir>/src/components$1",
      "^lib(.*)$": "<rootDir>/src/lib$1",
      "^models(.*)$": "<rootDir>/src/models$1",
      "^pages(.*)$": "<rootDir>/src/pages$1",
      "^styles(.*)$": "<rootDir>/src/styles$1"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:cypress/recommended"
    ],
    "plugins": [
      "prefer-let",
      "import"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "object-curly-newline": [
        "error",
        {
          "multiline": true,
          "consistent": true
        }
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-var": "error",
      "prefer-const": "off",
      "max-len": [
        "error",
        80
      ],
      "template-curly-spacing": [
        "error",
        "never"
      ],
      "prefer-let/prefer-let": "error",
      "prefer-arrow-callback": "error",
      "no-dupe-class-members": "error",
      "no-this-before-super": "error",
      "prefer-rest-params": "error",
      "constructor-super": "error",
      "object-shorthand": "error",
      "require-yield": "error",
      "arrow-spacing": "error",
      "arrow-parens": [
        2,
        "always"
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "hrefLeft",
            "hrefRight"
          ],
          "aspects": [
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "import/first": 2,
      "import/no-duplicates": 2,
      "import/newline-after-import": 1,
      "import/no-named-default": 2,
      "import/order": [
        "error",
        {
          "groups": [
            [
              "builtin",
              "external"
            ],
            "internal",
            [
              "index",
              "sibling",
              "parent"
            ],
            "object"
          ],
          "pathGroups": [
            {
              "pattern": "api/**/*",
              "group": "internal"
            },
            {
              "pattern": "components/**/*",
              "group": "internal"
            },
            {
              "pattern": "lib/**/*",
              "group": "internal"
            },
            {
              "pattern": "models/**/*",
              "group": "internal"
            },
            {
              "pattern": "pages/**/*",
              "group": "internal"
            },
            {
              "pattern": "styles/**/*",
              "group": "internal"
            }
          ],
          "pathGroupsExcludedImportTypes": [
            "builtin"
          ],
          "newlines-between": "always"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "effector": "^21.2.1",
    "effector-react": "^21.0.4",
    "form-data": "^3.0.0",
    "http-proxy-middleware": "^1.0.5",
    "nanoid": "^3.1.12",
    "next": "^11.1.3",
    "next-offline": "^5.0.2",
    "node-fetch": "^2.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.0"
  },
  "devDependencies": {
    "@logux/stylelint-config": "^0.1.3",
    "cypress": "^4.12.1",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prefer-let": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "stylelint": "^13.6.1",
    "stylelint-config-recess-order": "^2.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0"
  }
}
